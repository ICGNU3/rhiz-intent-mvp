# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Node Environment
NODE_ENV=production

# Database Configuration
# For Railway PostgreSQL:
DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/railway
DATABASE_POOL_URL=postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/railway?pgbouncer=true&pool_mode=transaction
DIRECT_URL=postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/railway

# For Neon PostgreSQL:
# DATABASE_URL=postgresql://[user]:[password]@[endpoint-pooler].neon.tech/rhiz?sslmode=require
# DATABASE_POOL_URL=postgresql://[user]:[password]@[endpoint-pooler].neon.tech/rhiz?sslmode=require&pool_mode=transaction
# DIRECT_URL=postgresql://[user]:[password]@[endpoint].neon.tech/rhiz?sslmode=require

# Redis Configuration
# For Railway Redis:
REDIS_URL=redis://default:[PASSWORD]@[HOST]:[PORT]

# For Upstash Redis:
# REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT].upstash.io:[PORT]

# OpenAI Configuration
OPENAI_API_KEY=sk-[your-openai-api-key]

# Security Keys (Generate strong random strings)
ENCRYPTION_KEY=[32-character-encryption-key]
JWT_SECRET=[strong-jwt-secret]
NEXTAUTH_SECRET=[strong-nextauth-secret]

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com

# Email Configuration (optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=[sendgrid-api-key]
SMTP_FROM=noreply@your-domain.com

# Monitoring & Analytics (optional)
SENTRY_DSN=https://[key]@[org].ingest.sentry.io/[project]
POSTHOG_API_KEY=phc_[your-posthog-key]
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Feature Flags
ENABLE_VOICE_TRANSCRIPTION=true
ENABLE_CALENDAR_SYNC=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_INTEGRATION=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=25
DB_IDLE_TIMEOUT=20
DB_MAX_LIFETIME=1800

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_MAX_RETRIES=3
WORKER_RETRY_DELAY=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json